{
    "name": "isucon/isucon11-qualify",
    "description": "ISUCON 11 qualify",
    "homepage": "https://isucon.net/",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^0.8.1",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^0.12.90",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:3000 -t public public/index.php",
        "style": "./vendor/bin/phpcs --standard=PSR1,PSR12 ./public",
        "analyse": "./vendor/bin/phpstan analyse ./public"
    }
}
