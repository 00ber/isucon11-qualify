{
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 200
      },
      "max-comma": {
        "max": 5
      },
      "ja-no-redundant-expression": false
    },
    "preset-ja-spacing": {
      "textlint-rule-ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "no-todo": true,
    "prh": {
      "rulePaths": [
        "prh-rule.yaml"
      ]
    },
    "preset-jtf-style": {
      "3.1.1.全角文字と半角文字の間": false
    }
  },
  "filters": {
    "allowlist": {
      "allow": [
        "負荷走行実行時",
        "負荷走行実施後",
        "負荷走行終了時点",
        "負荷走行終了後",
        "競技時間終了後"
      ]
    }
  }
}
